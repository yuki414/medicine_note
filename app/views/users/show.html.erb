<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %> さま
      </h1>
    </section>
  </aside>
</div>
<h2>薬歴一覧</h2>
<% @mhs.each do |mh| %>
  <div class="row">
    <div class="col-md-8 col-md-offset-3">
      処方日：<%= mh.date %>,
      担当薬剤師：<%= @pharmacist[mh.pharmacist_id-1].name %>,
      処方薬：<%= @medicine[mh.medicine_id-1].name %>,
      用法用量：<%= mh.dose %> <%= mh.adm %>
    </div>
  </div>
<% end %>