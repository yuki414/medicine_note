<% provide(:title, 'edit') %>
<h1>お薬情報の変更</h1>
<div id="center_Box">
  <%= render 'shared/medicineh_image' %>
</div>

お薬名：<%= Medicine.find(@mhis.medicine_id).name %>
お薬の説明：<%= Medicine.find(@mhis.medicine_id).description %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@mhis) do |f| %>
      
      <%= f.label :date, "日付" %>
      <%= f.date_field :date %>

      <%= f.label :pharmacist_id, "薬剤師名" %>
      <%= f.collection_select :pharmacist_id, Pharmacist.all, :id, :name %>

      <%= f.hidden_field :medicine_id, :value => @mhis.medicine_id %>

      <%= f.label :adm, "用法" %>
      <%= f.text_field :adm %>

      <%= f.label :dose, "用量" %>
      <%= f.text_field :dose %>

      <%= f.submit "編集", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>